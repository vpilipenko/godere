.godere-cart {
  display flex
  justify-content space-between
  margin-bottom: 2rem;

  &__list {
    flex-basis: 75%;
  }

  &__item {
    display flex
    justify-content space-between
    align-items: center;
    margin-bottom: 1rem;
    border-bottom: 1px solid $secondaryGrey;
    padding-bottom 1rem
  }

  &__title {
    font-weight $bold
    margin-bottom 0.5rem
    font-size 1.125rem
  }

  &__description {
    font-size 0.875rem
  }

  &__opts {
    display: flex;
    justify-content: space-between    
    flex-basis: 15%;
  }

  &__quantity {
    display: flex;
    justify-content: center    
    align-items: center;
  }

  &__amount {
    font-size 1rem
    font-weight $bold
    padding 0 0.5rem
  }

  &__minus, &__plus {
    width 1.5rem
    height 1.5rem
    border 1px solid $secondaryGrey
    border-radius 1rem
    text-align center
    line-height 1.5rem
    font-weight $bold
    color $secondaryGrey
    cursor pointer
  }

  &__price {
    font-weight $bold
    white-space: nowrap;
    margin-left: 1rem;
    font-size 1.125rem
  }

  &__close {
    cursor: pointer;
    width: 2rem;
    text-align: center;
    font-size: 2rem;
  }
}

@media screen and (max-width: 1024px) {
  .godere {
    &-cart {
      flex-direction: column;

      &__item {
        position relative
        flex-direction: column;
        margin-bottom: 2rem;
        border: none;
      }

      &__opts {
        margin: 1rem;
        width: 100%;    
      }

      &__close {
        position: absolute;
        top: -1rem;
        right: 0;
      }
    }
  }
}