.godere-breadcrumbs {
  display flex
  margin: 1rem 0 2rem;

  &__link {
    color: $secondaryRed
    position relative
    margin-right 1rem

    &:after {
        content: '/';
        position: absolute;
        right: -0.75rem;
        left: auto;
    }

    &_active {
        text-decoration none
        color $mainBlack   

        &:after {
          display none
        } 
    }
  }
}