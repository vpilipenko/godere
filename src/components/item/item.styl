.godere-item {
    position relative
    text-align: center
    border-radius: 8px;
    margin 0 1rem
    padding 1rem
    text-decoration: none;
    color: $mainBlack;

    &:hover {
        box-shadow: 0px 12px 48px rgba(0, 0, 0, 0.08);

        .godere-item__button {
            visibility visible
        }
    }

    &__label {
        position absolute
        top 1rem
        left 1rem
        background-color $mainGreen
        text-align center
        text-transform uppercase
        color $mainWhite
        height 2rem
        width 2rem
        border-radius 2rem
        line-height: 2rem
        font-size 0.5rem
    }

    &__title {
        font-weight $bold
        text-align: left 
        font-size 1.125rem
    }

    &__description {
        margin-bottom 1rem
        text-align: left 
        font-size 0.875rem
    }

    &__footer {
        display flex
        justify-content space-between
    }

    &__price {
        font-weight $bold
        text-align: left 
        font-size 1.125rem
    }

    &__status {
        padding-left 1.5rem
        position relative
        text-align: right 
        margin-bottom 2rem   
        font-size 0.875rem

        &:before {
            content: '';
            position: absolute;
            left: 0;
            top: 0.25rem;
            width: 1.25rem;
            height: 1.25rem;
            background: url(/assets/img/check.svg) no-repeat;
            background-size: contain;
        }
    }

    &__button {
        display inline-flex
        visibility hidden
        background $secondaryRed
        color $mainWhite
        text-decoration none
        padding 0.5rem 2.5rem
        border-radius: 5rem
        font-size 1.125rem

        &:hover {
            box-shadow: 0px 16px 32px rgba(207, 0, 0, 0.32);
        }
    }
}