.godere-item {
    position relative
    flex-basis 20%
    text-align: center
    border-radius: 8px;
    padding 1rem

    &:hover {
        box-shadow: 0px 12px 48px rgba(0, 0, 0, 0.08);

        .godere-item__button {
            visibility visible
        }
    }

    &__label {
        position absolute
        top 1rem
        left 1rem
        background-color $mainGreen
        text-align center
        text-transform uppercase
        color $mainWhite
        height 2rem
        width 2rem
        border-radius 2rem
        line-height: 2rem
        font-size 0.5rem
    }

    &__title {
        font-weight $bold
        text-align: left 
    }

    &__description {
        margin-bottom 1rem
        text-align: left 
    }

    &__footer {
        display flex
        justify-content space-between
    }

    &__price {
        font-weight $bold
        text-align: left 
    }

    &__status {
        padding-left 1.5rem
        position relative
        text-align: right 
        margin-bottom 2rem   

        &:before {
            content: '';
            position: absolute;
            left: 0;
            top: 0.25rem;
            width: 1rem;
            height: 1rem;
            background: url(../../../src/assets/img/check.png) no-repeat;
            background-size: contain;
        }
    }

    &__button {
        display inline-block
        visibility hidden
        background $secondaryRed
        color $mainWhite
        text-decoration none
        padding 0.5rem 2.5rem
        border-radius: 5rem
        font-size 1.25rem

        &:hover {
            box-shadow: 0px 16px 32px rgba(207, 0, 0, 0.32);
        }
    }
}