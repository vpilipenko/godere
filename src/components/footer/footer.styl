.godere-footer {
  background-color $mainGrey
  display flex
  padding: 2rem;
  margin: 0 -2rem;
  min-height: fit-content;

  &__copy {
    opacity 0.4
    margin 1rem 0 0.5rem
  }

  &__user-agreement {
    display block
    opacity 0.4
    color $mainBlack
    text-decoration none
    margin-bottom 1rem
  }

  &__col {
    flex-basis 20%
  }

  &__title {
    font-weight $bold
    margin-bottom 0.5rem
  }

  &__link {
    display block
    color $mainBlack
    text-decoration none
    font-size 1rem

    &:hover {
      color $mainRed
    }
  }

  &__social {
    &-link {
      display: inline-flex;
      height: 1.5rem;
      width: 1.5rem;
      justify-content: center;
    }
  }

  .godere-logo svg {
    max-height 52px
  }
}

@media screen and (max-width: 1024px) {
  .godere {
    &-footer {
      flex-direction: column;
      padding: 2rem 1rem;
      margin: 0 -1rem;

      &__col {
        margin-bottom: 1rem;
      }
    }
  }
}