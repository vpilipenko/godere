.godere-footer {
  background-color $mainGrey
  display flex
  padding 2rem 0

  &__copy {
    opacity 0.4
    font-size: 0.875rem;
    margin-bottom 0.5rem
  }

  &__user-agreement {
    display block
    opacity 0.4
    color $mainBlack
    text-decoration none
    font-size: 0.875rem;
    margin-bottom 1rem
  }

  &__col {
    flex-basis 20%
  }

  &__title {
    font-weight $bold
    margin-bottom 0.5rem
  }

  &__link {
    display block
    color $mainBlack
    text-decoration none
    font-size 1rem
  }

  &__social {
    &-link {
      display: inline-flex;
      height: 1.5rem;
      width: 1.5rem;
      justify-content: center;
    }
  }
}

@media screen and (max-width: 1024px) {
  .godere {
    &-footer {
      flex-direction: column;

      &__col {
        margin-bottom: 1rem;
      }
    }
  }
}