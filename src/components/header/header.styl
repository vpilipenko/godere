.godere {
  &-header {
    display: flex
    justify-content: space-between

    &_absolute {
      position absolute
      left 0
      top 0
      width 100%
      z-index 1
      padding: 0 2rem
    }

    &__search, &__cart {
      position relative
      padding: 0 0.5rem
    }

    &__count {
      position absolute
      bottom: 0.5rem
      right 0
      width 1rem
      height 1rem
      text-align center
      line-height 1rem
      background $secondaryRed
      color $mainWhite
      font-size 0.5rem
      text-decoration none
      border-radius 1rem
    }
  }

  &-nav {
    &__item {
      svg {
        display none
      }

      &_cabinet {
        svg {
          display block
        }
      }
    }
  }
}


@media screen and (min-width: 1024px) {
  .godere {
    
    &-logo {
      display inline-flex

      svg {
        max-width: 180px
        width: 100%
      }
    }

    &-header {
      color $mainGrey

      &__container {
        position relative
        display flex
        align-items: center
      }

      &__sub {
        display inline-flex
        align-items: center
      }

      &__count {
        bottom: 0
        right: 0.25rem
      }

      &__hamburger {
        display none
      }

      svg path {
        fill $mainBlack
      }

      &_invert {
        color $mainWhite
        
        svg path {
          fill $mainWhite
        }
      }

      &_absolute { 
        .godere-nav__item {
          color $mainWhite

          &:hover {
            color $mainWhite
          }
        }
      }
    }

    &-nav {
      display inline-flex
      margin-left auto

      &__item {
        position relative
        display inline-flex
        line-height 1.5rem
        padding 2rem 1.5rem
        color $mainBlack
        text-decoration: none
        cursor context-menu

        &:hover, &:focus {
          color $mainRed
        }
      }
      &__pane {
        position absolute
        top 70px
        left 0
        width 100%
        display none
        background-color $mainWhite
        color $mainBlack
        padding 2rem 0
        border-radius .5rem
        box-shadow 0 1rem 1rem rgba($grey1000, .32)
        z-index 100

        &_active {
          display flex
        }

        &_personal {
          flex-direction: column
          width auto
          padding: 1rem
          margin 0 1rem
        }
      }

      &__block {
        display inline-flex
        flex-direction column
        padding 0 1rem
      }

      &__link {
        display inline-flex
        color inherit
        font-size 0.875rem
        line-height 1.125rem
        text-decoration none
        cursor pointer
        padding .25rem 0

        &:hover, &:focus {
          color $mainRed
        }

        &_title {
          font-size 1.125rem
          line-height 1.5rem
          font-weight $bold
        }
      }
    }
  }
  a.godere-nav__item, .godere-nav__item_login {
    cursor pointer
  }
}

@media screen and (max-width: 1024px) {
  .godere {

    &-logo {
      display: block;
      position relative
      width 100px
      z-index: 100
    }

    &-header {
      &__sub {
        position: absolute
        right: 0
        top: 0
        display: flex
        z-index: 10
      }

      &__search, &__cart {
        width: 2rem
        text-align: center
        font-size: 2rem
        position relative
      }

      &__count {
        right: -0.25rem
      }

      &__hamburger {
        position: relative
        display: block
        width: 3rem
        height: 3rem
        z-index: 100

        span {
          position: absolute
          left: .875rem
          width: 1.25rem
          height: .125rem
          background-color: $grey1000
          border-radius: 1rem
          transform-origin: 50% 50%
          transition: top .2s ease-in-out .2s, transform .2s ease-in-out
        }
        span:nth-child(1) {
          top: 1.125rem
        }
        span:nth-child(2) {
          top: 1.4375rem
        }
        span:nth-child(3) {
          top: 1.75rem
        }
        &_active {
          span {
            background-color: $white
            transition: top .2s ease-in-out, transform .2s ease-in-out .2s
          }
          span:nth-child(1) {
            top: 1.4375rem
            transform: rotateZ(45deg)
          }
          span:nth-child(2) {
            top: 1.4375rem
            transform: scale(1, 0)
          }
          span:nth-child(3) {
            top: 1.4375rem
            transform: rotateZ(-45deg)
          }
        }
      }

      svg path {
        fill $mainBlack
      }

      &_invert {
        color $mainBlack
        
        svg path {
          fill $mainBlack
        }
      }

      &_absolute { 
        position: static
        padding: 0
        margin-bottom: 0.5rem

        .godere-nav__item {
          color $mainBlack

          &:hover {
            color $mainBlack
          }
        }
      }
    }

    &-nav {
      display none
      position absolute
      top 0
      left 0
      flex-direction column
      width 100%
      height 100vh
      background-color white
      padding 5rem 0 2rem
      z-index 10

      &_active {
        display flex
        overflow auto
      }

      &__item {
        display flex
        padding .25rem 1.25rem
        text-decoration none
        color $mainBlack
      }

      &__block {
        display flex
        flex-direction column
      }

      &__link {
        display flex
        padding .25rem 1.25rem
        text-decoration none
        color $mainBlack

        &:not(.godere-nav__link_title) {
          display none
        }
      }
    }
  }
}
