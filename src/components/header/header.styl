header.header {
  display none !important // todo remove
  &.dark {
    color white
  svg path {
      fill white
    }
  }
  &.absolute {
    position absolute
    left 0
    top 0
    width 100%
    z-index 1
  }
}


@media screen and (min-width: 1024px) {
  header.header {
    color $grey1000

    .container {
      position relative
      display flex
      align-items: center
    }

    .logo {
      display inline-flex
      svg {
        max-width: 180px;
        width: 100%;
      }
    }

    nav.nav {
      display inline-flex
      margin-left auto
      .nav-item {
        display inline-flex
        font-size 16px
        line-height 24px
        padding 2rem 1rem
        color inherit
        text-decoration: none
        cursor context-menu
        &:hover, &:focus {
          color $mainRed
        }
      }
      a.nav-item {
        cursor pointer
      }
      .pane {
        position absolute
        top 80px
        left 0
        width 100%
        display flex
        background-color white
        padding 2rem 0
        border-radius .5rem
        box-shadow 0 1rem 1rem rgba($grey1000, .32)
        margin 0 15px
        z-index 100
        .block {
          display inline-flex
          flex-direction column
          padding 0 1rem
          .item {
            display inline-flex
            color inherit
            font-size 14px
            line-height 18px
            text-decoration none
            cursor pointer
            padding .25rem 0
            &:hover, &:focus {
              color $mainRed
            }
            &.title {
              font-size 18px
              line-height 24px
              font-weight $bold
            }
          }
        }
      }
    }

    .sub {
      display inline-flex
      #hamburger {
        // display none
      }
    }
  }
}

@media screen and (max-width: 1024px) {
  header.header {

    .logo {
      position relative
      width 100px
      z-index: 100
    }

    nav.nav {
      position absolute
      top 0
      left 0
      display flex
      flex-direction column
      width 100%
      height 100vh
      background-color white
      padding 5rem 0 2rem
      .pane {
        .block {
          display flex
          flex-direction column
          .item {
            display flex
            padding .25rem 1.25rem
            &:not(.title) {
              display none
            }
          }
        }
      }
      .nav-item {
        display flex
        padding .25rem 1.25rem
        &#cabinetNavItem {
          margin-top auto
        }
      }
    }


    .sub {
      position absolute
      right 0
      top 0
      display flex
    }
  }
}









#hamburger {
        position: relative;
        display: block;
        width: 3rem;
        height: 3rem;
        z-index: 100;
        span {
          position: absolute;
          left: .875rem;
          width: 1.25rem;
          height: .125rem;
          background-color: $grey1000;
          border-radius: 1rem;
          transform-origin: 50% 50%;
          transition: top .2s ease-in-out .2s, transform .2s ease-in-out;
        }
        span:nth-child(1) {
          top: 1.125rem
        }
        span:nth-child(2) {
          top: 1.4375rem
        }
        span:nth-child(3) {
          top: 1.75rem
        }
        &.active {
          span {
            background-color: $white;
            transition: top .2s ease-in-out, transform .2s ease-in-out .2s;
          }
          span:nth-child(1) {
            top: 1.4375rem;
            transform: rotateZ(45deg)
          }
          span:nth-child(2) {
            top: 1.4375rem;
            transform: scale(1, 0)
          }
          span:nth-child(3) {
            top: 1.4375rem;
            transform: rotateZ(-45deg)
          }
        }
}