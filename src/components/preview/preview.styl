.godere-preview {
  display none
  padding 1rem
  position: fixed;
  top: 50%;
  transform: translateY(-50%);
  right: 0;
  left: 0;
  border-radius: 8px;
  margin: auto;
  width: 80%;
  height: auto;
  background: #fff;
  box-shadow: 0px 12px 40px rgba(0, 0, 0, 0.08);
  z-index: 999;

  &_active {
    display block
  }
  
  &__list {
    flex-basis: 75%;
  }

  &__item {
    display flex
    justify-content space-between
    align-items: center;
    margin-bottom: 1rem;
    border-bottom: 1px solid $secondaryGrey;
    padding-bottom 1rem
  }

  &__title {
    font-weight $bold
    margin-bottom 0.5rem
  }

  &__opts {
    display: flex;
    justify-content: space-between    
    flex-basis: 15%;
  }

  &__quantity {
    display: flex;
    justify-content: center    
    align-items: center;
  }

  &__amount {
    font-size 1rem
    font-weight $bold
    padding 0 0.5rem
  }

  &__minus, &__plus {
    width 1.5rem
    height 1.5rem
    border 1px solid $secondaryGrey
    border-radius 1rem
    text-align center
    line-height 1.5rem
    font-weight $bold
    color $secondaryGrey
    cursor pointer
  }

  &__price {
    font-weight $bold
  }

  &__close {
    cursor pointer
    font-size 2rem
  }

  &__bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  &__button {
    display: inline-flex;
    background: $secondaryRed;
    color: $mainWhite;
    text-decoration: none;
    padding: .5rem 2.5rem;
    border-radius: 5rem;
    font-size: 1rem;
  }
}

@media screen and (max-width: 1024px) {
  .godere {
    &-preview {
      width 100%

      &__item {
        position relative
        flex-direction: column;
        margin-bottom: 2rem;
        border: none;
      }

      &__opts {
        margin: 1rem;
        width: 100%;    
      }

      &__close {
        position: absolute;
        top: -1rem;
        right: 0;
      }
    }
  }
}