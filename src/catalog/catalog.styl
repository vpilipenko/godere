.godere{
  &-catalog {
    display flex
    position: relative
    margin-bottom: 2rem;
    
    &__content {

    }

    &__select {
      display flex
      justify-content flex-end
      margin-bottom 1rem

      select {
        width: 200px;
        height: 2rem
        border: 1px solid $secondaryGrey;
        background $mainWhite
      }
    }

    &__list {
      display flex
      justify-content space-between
    }

    &__filter {
      display none
    }
  } 
  &-filters {
    box-shadow: 0 12px 48px rgba(0,0,0,0.08);
    flex-basis: 20%;
    min-width: 20%;
    margin-right: 2rem;
    padding: 1rem 1rem 2rem; 
    height: fit-content;
    border-radius 8px

    &__title {
      font-weight $bold
      margin-bottom 1rem
      font-size 1.125rem
    }

    &__price {
      display flex
      justify-content space-between
      margin-bottom 1rem
      
      input[type=number] {
        max-width  48%
        flex-basis: 48%;
        margin 0 0 0.5rem
        padding 0.25rem
        border 1px solid $secondaryGrey
        border-radius: 8px;
        outline none
      }
    }

    &__slider {
      margin-bottom 2rem
    }

    &__brand {
      margin-bottom 2rem 

      input[type=text] {
        width 100%
        margin 0 0 1.25rem
        padding 0.25rem
        border 1px solid $secondaryGrey
        border-radius: 8px;
        outline none
      } 
    }

    &__checkbox {
      margin-bottom: 1rem;

      input[type=checkbox] {
        position: absolute;
        opacity: 0;
        cursor: pointer;
        height: 0;
        width: 0;

        &:checked ~ label {
          &:before {
            background: url(/assets/img/checkbox_active.svg) no-repeat;
            background-size: contain;
            background-color $mainRed
          }
        }
      }

      label {
        position relative
        padding-left: 2rem;
        padding-top: 0.25rem;
        cursor pointer
        font-size 0.875rem

        &:before {
          content: '';
          position: absolute;
          top: 0;
          left: 0;
          width: 1.5rem;
          height: 1.5rem;
          background-image: url(/assets/img/checkbox.svg);
          background-size: contain;
        }
        
      }
    }

    &__close {
      display none
    }
  }
}

.noUi-horizontal {
  height 0.5rem

  .noUi-handle {
    height: 1.5rem;
    width: 1.5rem;
    top: -0.6rem;
    border-radius: 1rem;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.16);
    outline none

    &:before, &:after {
      display none
    }
  }
}
.noUi-connect {
  background $secondaryRed
}

@media screen and (max-width: 1024px) {
  .godere {
    &-catalog {
      flex-direction: column;

      &__list {
        flex-direction: column;
      }

      &__select {
        justify-content: space-between;
      }

      &__filter {
        display block
        position relative
        padding-left 2rem

        &:before {
          content: '';
          position: absolute;
          top: 0;
          left: 0;
          width: 1.5rem;
          height: 1.5rem;
          background-image: url(/assets/img/filter.svg);
          background-size: contain;
        }
      }
    }
    &-filters {
      display none
      position absolute
      left 0
      width 100%
      height: 100vh;
      background: $mainWhite;
      z-index: 10;

      &_active {
        display block
      }

      &__close {
        display: block;
        position: absolute;
        right: 0;
        padding: 0 1rem;
        font-size: 2rem;
        top: 0;
        cursor: pointer;
      }
    }

    &-item {
      margin 0 0 1rem 0

      &:hover {
        box-shadow none

        .godere-item__button {
          visibility hidden
        }
      }
    }
  }
}