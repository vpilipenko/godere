.godere-cart {
  display flex
  justify-content space-between

  &__list {
    flex-basis: 75%;
  }

  &__item {
    display flex
    justify-content space-between
    align-items: center;
    margin-bottom: 1rem;
    border-bottom: 1px solid $secondaryGrey;
    padding-bottom 1rem
  }

  &__title {
    font-weight $bold
    margin-bottom 0.5rem
  }

  &__quantity {
    display: flex;
    justify-content: center    
    align-items: center;
  }

  &__amount {
    font-size 1rem
    font-weight $bold
    padding 0 0.5rem
  }

  &__minus, &__plus {
    width 1.5rem
    height 1.5rem
    border 1px solid $secondaryGrey
    border-radius 1rem
    text-align center
    line-height 1.5rem
    font-weight $bold
    color $secondaryGrey
    cursor pointer
  }

  &__price {
    font-weight $bold
  }

  &__close {
    cursor pointer
    font-size 2rem
  }
}